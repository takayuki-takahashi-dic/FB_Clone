<h1>Sign up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name ,for: 'formGroupExampleInput' %>
  <%= f.text_field :name ,class: 'form-control'  %>

  <%= f.label :email ,for: 'formGroupExampleInput' %>
  <%= f.email_field :email ,class: 'form-control'  %>

  <%= f.label :password ,for: 'formGroupExampleInput' %>
  <%= f.password_field :password ,class: 'form-control'  %>

  <%= f.label :password_confirmation ,for: 'formGroupExampleInput' %>
  <%= f.password_field :password_confirmation ,class: 'form-control'  %>
<br>
  <%= f.submit "Create my account" ,class: 'btn btn-primary mb-2'  %>
<% end %>
